<head>
  <title>Confirm a request</title>
  <link rel="stylesheet" href="/style.css"/>
</head>

<body>
  <h1>Request for '<%= @booking.space.name %>'</h1>

    From: <%= @booking.user.email %>
    Date: <%= @booking.arrival %>
  <form action='/bookings/confirmation' method='post'>
    <button id="confirm" type="submit" name="decision" value="confirm">Confirm request from <%= @booking.user.email %></button>
    <input id="deny" type="submit" value="Deny request from <%= @booking.user.email %>">
  </form>
</body>
